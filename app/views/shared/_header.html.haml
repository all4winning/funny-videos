#container.container-fluid
  %nav.navbar.navbar-fixed-top.navbar-static-top.navbar-default{role: "navigation"}
    .container-fluid
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: root_path} Funny Videos
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li.active
            %a{href: "#"} Latest
          %li
            %a{href: "#"} Most Popular
        %form.navbar-form.navbar-left{role: "search"}
          .form-group
            %input.form-control{placeholder: "Search", type: "text"}/
          %button.btn.btn-default{type: "submit"} Submit
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li
              %a{href: root_path} My Account
            %li
              = link_to "Logout", destroy_user_session_path, {method: "delete"}
          - else
            %li
              %a{href: new_user_session_path} Login
            %li
              %a{href: new_user_registration_path} Register

  .jumbotron
    %h1 Win an iPad mini!
    %p Upload a funny video and you could win an iPad mini
    %p
      %a.btn.btn-primary.btn-lg{role: "button"} Enter the contest NOW!