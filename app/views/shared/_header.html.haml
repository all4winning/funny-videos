.container-fluid
  %nav.navbar.navbar-fixed-top.navbar-static-top.navbar-default{role: "navigation"}
    .container-fluid
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: root_path} Funny Videos
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li.active
            %a{href: "#"} 
              %i.fa.fa-home.fa-fw
              Home
          %li
            %a{href: "#"} Popular
          %li
            %a{href: "#"} Trending
              
        %form.navbar-form.navbar-left{role: "search"}
          .form-group
            .input-group.margin-bottom-sm
              %span.input-group-addon
                %i.fa.fa-search.fa-fw
              %input.form-control{type: "text", placeholder: "Search"}
            %button.btn.btn-default{type: "submit"} Submit
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            .btn-group#upload
              %a.btn.btn-primary{href: new_posts_video_path}
                %i.fa.fa-upload.fa-fw
                Upload
            .btn-group#my-account
              %a.btn.btn-primary{href: root_path}
                %i.fa.fa-user.fa-fw
                = current_user.username
              %a.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                %span.fa.fa-caret-down
              %ul.dropdown-menu
                %li
                  %a{href: root_path}
                    %i.fa.fa-pencil.fa-fw
                    Edit
                %li
                  = link_to destroy_user_session_path, {method: "delete"} do
                    %i.fa.fa-trash-o.fa-fw
                    Logout
          - else
            %li
              %a#facebook-connect{ href: user_omniauth_authorize_path(:facebook) }
                %button.btn.btn-facebook
                  %i.fa.fa-facebook 
                    Connect with Facebook

